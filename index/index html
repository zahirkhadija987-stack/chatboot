<body>

<div class="container">
    <h2 style="margin-top:0">Qwen3 VL 32B Instruct</h2>
    <div id="chat-window">
        <div class="msg ai">Prêt à analyser vos textes ou vos images (via URL).</div>
    </div>

    <div class="input-area">
        <input type="text" id="user-input" placeholder="Posez une question sur une image ou un texte...">
        <button onclick="sendToQwen()">Envoyer</button>
    </div>
    <p style="font-size: 11px; color: #64748b; margin-top: 10px;">Modèle: qwen/qwen-3-vl-32b-instruct</p>
</div>

<script>
    async function sendToQwen() {
        const input = document.getElementById('user-input');
        const window = document.getElementById('chat-window');
        const text = input.value.trim();

        if (!text) return;

        // Affichage message utilisateur
        window.innerHTML += `<div class="msg user"><b>Vous:</b> ${text}</div>`;
        input.value = '';
        window.scrollTop = window.scrollHeight;

        try {
            const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
                method: "POST",
                headers: {
                    "Authorization": "Bearer VOTRE_CLE_API_ICI", // <--- Remplacez ici
                    "Content-Type": "application/json",
                    "HTTP-Referer": window.location.href, 
                    "X-Title": "Qwen3 Web Test"
                },
                body: JSON.stringify({
                    "model": "qwen/qwen-3-vl-32b-instruct",
                    "messages": [
                        {
                            "role": "user",
                            "content": [
                                { "type": "text", "text": text }
                                // Pour une image, on ajouterait ici un objet { type: "image_url", image_url: {...} }
                            ]
                        }
                    ]
                })
            });

            const data = await response.json();
            
            if (data.choices && data.choices[0]) {
                const aiMsg = data.choices[0].message.content;
                window.innerHTML += `<div class="msg ai"><b>Qwen3:</b> ${aiMsg}</div>`;
            } else {
                throw new Error(data.error?.message || "Erreur inconnue");
            }

        } catch (error) {
            window.innerHTML += `<div class="msg error"><b>Erreur:</b> ${error.message}</div>`;
        }
        
        window.scrollTop = window.scrollHeight;
    }

    // Gestion de la touche Entrée
    document.getElementById('user-input').addEventListener('keypress', (e) => {
        if (e.key === 'Enter') sendToQwen();
    });
</script>

</body>
